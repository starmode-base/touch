{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["chrome"],
    "noUncheckedIndexedAccess": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.js", "**/*.jsx", "**/*.tsx"]
}
